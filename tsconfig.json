{
  "compilerOptions": {
    "module": "esnext",
    "target": "es2020",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noEmitHelpers": true,
    "noEmitOnError": true,
    "skipLibCheck": true,
    "lib": [
      "ESNext",
      "dom"
    ],
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "app/*"
      ]
    },
    "removeComments": false
  },
  "include": [
    "app/**/*",
    "types/*"
  ],
  "files": [
    "./references.d.ts"
  ],
  "exclude": [
    "node_modules",
    "platforms"
  ],
  "glint": {
    "environment": ["ember-template-imports"]
  }
}
